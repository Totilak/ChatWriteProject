<Window x:Class="ChatVrite.VerificationCodeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatVrite"
        mc:Ignorable="d"
        Title="Verification Code" Height="200" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="16*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Margin="10,10,10,10" Grid.ColumnSpan="2">
            <TextBlock Text="Код из письма" Margin="0,0,0,10" FontSize="30" FontFamily="Montserrat bold" HorizontalAlignment="Center"/>
            <TextBox x:Name="VerificationCodeInput" Width="210" Height="auto"  FontSize="25" FontFamily="Montserrat bold" HorizontalAlignment="Center"/>
            <Button Content="Продолжить" Width="auto" Height="auto" Margin="0,10,0,0" Click="Submit_Click" HorizontalAlignment="Center"  FontSize="30" FontFamily="Montserrat bold"/>
        </StackPanel>
    </Grid>
</Window>
